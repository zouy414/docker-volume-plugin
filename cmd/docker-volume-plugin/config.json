{
    "description": "Net Volume Plugin for Docker Swarm",
    "documentation": "https://github.com/zouy414/docker-volume-plugin",
    "interface": {
        "types": [
            "docker.volumedriver/1.0"
        ],
        "socket": "dvp.sock"
    },
    "entrypoint": [
        "/docker-volume-plugin"
    ],
    "network": {
        "type": "host"
    },
    "propagatedMount": "/var/lib/docker-volumes",
    "env": [
        {
            "description": "The path of the socket the engine should use to communicate with the plugins",
            "name": "UNIX_ENDPOINT",
            "value": "/run/docker/plugins/dvp.sock"
        },
        {
            "description": "The log level for the plugin",
            "name": "LOG_LEVEL",
            "settable": [
                "value"
            ],
            "value": "info"
        },
        {
            "description": "The driver name for the volume plugin",
            "name": "DRIVER",
            "settable": [
                "value"
            ],
            "value": "nfs"
        },
        {
            "description": "The options for specified driver",
            "name": "DRIVER_OPTIONS",
            "settable": [
                "value"
            ],
            "value": "{\"address\": \"nfs-server.example.com\", \"remotePath\": \"/exported/path\"}"
        }
    ],
    "linux": {
        "capabilities": [
            "CAP_SYS_ADMIN"
        ],
        "allowAllDevices": false,
        "devices": []
    }
}
